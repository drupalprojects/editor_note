 *
 * @param string $field_name
 */
function editor_note_add_ctools_support($field_name) {
  // Includes the CTools tools that we need.
  ctools_include('ajax');
  ctools_include('modal');

  // Adds CTools' javascript to the page.
  ctools_modal_add_js();

  // Creates javascript settings to customize modal.
  $modal_styles = array(
    $field_name . '-remove' => array(
      'modalSize' => array(
        'type' => 'fixed',
        'width' => 320,
        'height' => 'auto',
      ),
      'modalOptions' => array(
        'opacity' => 0.7,
        'background-color' => '#000',
      ),
      'animation' => 'show',
    ),
    $field_name . '-edit' => array(
      'modalSize' => array(
        'type' => 'fixed',
        'width' => 600,
        'height' => 'auto',
      ),
      'modalOptions' => array(
        'opacity' => 0.7,
        'background-color' => '#000',
      ),
      'animation' => 'show',
    ),
  );

  // Passes CTools modal settings to js.
  drupal_add_js($modal_styles, 'setting');

  // Adds custom css to style popups.
  ctools_add_css('editor-note-ctools-style', 'editor_note');
}
